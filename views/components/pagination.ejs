
<% if (lastPage > 2) { %>

  <nav aria-label="Store Pagination">
    <ul class="pagination">
      <li class="page-item">
        <a class="page-link" href="<%= '/store/?page=' + (currentPage - 1) %>">Previous</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="<%= '/store/?page=' + 1 %>"><%= 1 %></a>
      </li>
      
      <% for(let p = Math.max(currentPage-2, 2);
        p <= Math.min(lastPage-1,currentPage+2);
        p+=1) { %>
        <li class="<%= 'page-item' + ( p === currentPage ? ' active' : '') %>">
          <a class="page-link" href="<%= '/store/?page=' + p %>"><%= p %></a>
        </li>
      <% } %>
      <!-- <li class="page-item active" aria-current="page">
          <span class="page-link">2</span>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
     -->
      <li class="page-item">
        <a class="page-link" href="<%= '/store/?page=' + lastPage %>"
          ><%= lastPage %></a
        >
      </li>
      <li class="page-item">
        <a class="page-link" href="<%= '/store/?page=' + (currentPage + 1) %>">Next</a>
      </li>
    </ul>
  </nav>
<% } else { %>
  <div>No pagination <%= lastPage %> </div>
<% } %>